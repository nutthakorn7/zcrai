{
  "name": "zcrai-backend",
  "version": "0.0.1",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch index.ts",
    "start": "bun run index.ts",
    "test": "bun test --workers=1",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/*.test.ts --workers=1",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:sql": "bash scripts/run-migrations.sh",
    "db:seed": "bun run scripts/seed-superadmin.ts",
    "db:setup": "bun run db:migrate:sql && bun run db:seed",
    "deploy": "pm2 start scripts/start-prod.sh --name zcrAI-backend --interpreter bash && pm2 save"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@aws-sdk/client-s3": "^3.948.0",
    "@aws-sdk/client-sts": "^3.948.0",
    "@clickhouse/client": "^1.14.0",
    "@elysiajs/cors": "latest",
    "@elysiajs/eden": "^1.4.5",
    "@elysiajs/jwt": "latest",
    "@elysiajs/stream": "^1.1.0",
    "@elysiajs/swagger": "latest",
    "@google/generative-ai": "^0.24.1",
    "@simplewebauthn/server": "^13.2.2",
    "@types/cron": "^2.4.3",
    "axios": "^1.13.2",
    "cron": "^4.3.4",
    "drizzle-orm": "latest",
    "elysia": "latest",
    "elysia-helmet": "^3.0.0",
    "elysia-rate-limit": "^4.4.2",
    "geoip-lite": "^1.4.10",
    "haversine": "^1.1.1",
    "ioredis": "^5.8.2",
    "jose": "^6.1.3",
    "nanoid": "^5.1.6",
    "openai": "^6.9.1",
    "openid-client": "^6.8.1",
    "otpauth": "^9.4.1",
    "postgres": "latest",
    "puppeteer": "^24.33.0",
    "qrcode": "^1.5.4",
    "redis": "latest",
    "resend": "^6.6.0"
  },
  "devDependencies": {
    "@types/geoip-lite": "^1.4.4",
    "@types/haversine": "^1.1.8",
    "@types/qrcode": "^1.5.6",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8",
    "ioredis-mock": "^8.13.1",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "esbuild": "^0.25.0",
    "tmp": "^0.2.4"
  }
}
